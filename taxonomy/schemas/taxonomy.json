{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://antoninus.com/taxonomy.schema.json",
    "title": "taxonomy",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "species": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/species"
            }
        }
    },
    "required": [
        "id",
        "species"
    ],
    "$defs": {
        "species": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "sciName": {
                    "type": "string"
                },
                "taxonomicOrder": {
                    "type": "number"
                },
                "parent": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "required": [
                "id",
                "type",
                "sciName",
                "taxonomicOrder",
                "parent"
            ]
        }
    }
}